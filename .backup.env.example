# Konfiguracja kopii zapasowej dla EQOS WorkTime
# Skopiuj ten plik do .backup.env i uzupełnij własnymi danymi

################################################################################
# Konfiguracja aplikacji
################################################################################

# Ścieżka do katalogu aplikacji
APP_PATH="/home/waldi/Projekty/PM_EQOS/eqos-worktime"

# Katalog na logi backupu
LOG_DIR="/home/waldi/Projekty/PM_EQOS/eqos-worktime/storage/logs/backup"

################################################################################
# Konfiguracja bazy danych MySQL
################################################################################

# Host bazy danych
DB_HOST="localhost"

# Port bazy danych
DB_PORT="3306"

# Nazwa bazy danych
DB_DATABASE="eqos_worktime"

# Użytkownik bazy danych
DB_USERNAME="root"

# Hasło do bazy danych
DB_PASSWORD="your_password_here"

################################################################################
# Konfiguracja zasobu sieciowego Windows (SMB/CIFS)
################################################################################

# Ścieżka do zasobu sieciowego (format: //serwer/udział)
# Przykład: //192.168.1.100/backups lub //server.local/backup_share
SMB_SHARE="//192.168.1.100/backups"

# Nazwa użytkownika Windows
# Dla konta lokalnego: Administrator
# Dla konta domenowego: DOMENA\\uzytkownik
SMB_USERNAME="Administrator"

# Hasło użytkownika Windows
SMB_PASSWORD="backup_password"

# Domena Windows (opcjonalne, pozostaw puste jeśli nie używasz domeny)
# Dla komputera lokalnego pozostaw puste lub wpisz nazwę komputera
SMB_DOMAIN=""

################################################################################
# Polityka retencji kopii zapasowych
################################################################################

# Liczba dni, przez które przechowywane są kopie zapasowe
# Starsze kopie zostaną automatycznie usunięte
RETENTION_DAYS=30
